// This program finds the sum and average of ten numbers supplied by the user.

#include <stdio.h>

int main(void) {
  float num=0, sum=0, avg=0;

  
  for (int i=0; i<10; i++) { 
    printf("Please enter a number.\n");
    scanf("%feof(FILE *__stream)", &num);

    sum+=num;
    avg=sum/10;
  }

  printf("The sum of the ten numbers provided is %f\n", sum);
  printf("The average of the ten numbers provided is %f\n", avg);

  return 0;
}
