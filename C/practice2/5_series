// This program displays the sum of the sequence 1+11+111+... until the term given by the user. 

#include <stdio.h>

int main(void) {
  int sum=0, t=1, n, i;

  printf("Please input the number of terms you'd like to be added.\n");
  scanf("%d", &n);

  for (i=1; i<=n; i++) {
     sum=sum+t;
     t=(t*10)+1;
  }

  printf("The sum is %d.\n", sum);
  return 0;
}
