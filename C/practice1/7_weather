// This program aims to display a suitable message depending on the temperature given in celsius.

#include <stdio.h>

int main(void) {
  int temp=0;

  printf("Please enter the temperature in celsius.\n");
  scanf("%d", &temp);
  if (temp<0) {
    printf("It is freezing weather.");
  }
  else if (temp>0 && temp<10) {
    printf("It is very cold weather.\n");
  }
  else if (temp>=10 && temp<20) {
    printf("It is cold weather.\n");
  }
  else if (temp>=20 && temp<30) {
    printf("It is normal weather.\n");
  }
  else if (temp>=30 && temp<40) {
    printf("It is hot weather.\n");
  }
  else if (temp>=40) {
    printf("It is very hot weather.\n");
  }
  return 0;
}
