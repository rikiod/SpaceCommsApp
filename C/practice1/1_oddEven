// This program (#1) checks whether a given number is even or odd.

#include <stdio.h>

int main(void) {
  int number=0;

  printf("Please enter a number.\n");
  scanf("%d", &number);
  if ( number % 2 == 0 ) {
    printf("The number is even.\n");
  }
  else {
    printf("The number is odd.\n");
  }
  return 0;
}
