// This program (#2) checks whether a given number is positive or negative.

#include <stdio.h>

int main(void) {
  int number=0;

  printf("Please enter a number.\n");
  scanf("%d", &number);
  if (number > 0) {
    printf("The number is positive.\n");
      }
      else {
        printf("The number is negative.\n");
      }
  return 0;
}
